[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=yourusername
Group=www-data
WorkingDirectory=/path/to/${GUNICORN_WD_BACKEND_MICRO}
ExecStart=/path/to/ft_transcendence/venv/bin/gunicorn --workers 3 --bind unix:/path/to/ft_transcendence/docker/requirements/backendmicro/srcs/backendmicro/backendmicro.sock backendmicro.wsgi:application

[Install]
WantedBy=multi-user.target
